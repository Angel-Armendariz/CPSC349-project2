

<form action="/user/login" method="post">

<div class="flex flex-col items-center space-y-6 border-8">

          <h1 class="text-green-500 text-xl mb-3">Log in</h1>

          <input type="text" name="username" placeholder="username" required class="border-2">

          <input type="password" name="password" placeholder="password" required class="border-2">

          <a class="transition ease-in-out delay-150 duration-300 text-white bg-cyan-500 shadow-lg shadow-cyan-500/50 rounded-md
                     hover:-translate-y-1 hover:scale-110 hover:bg-indigo-500 text-center m-4" href="/user/forgot">Forgot your password?</a>

          <button type="submit" class="transition ease-in-out delay-150 duration-300 text-white bg-cyan-500 shadow-lg shadow-cyan-500/50 rounded-md
                                    hover:-translate-y-1 hover:scale-110 hover:bg-indigo-500 text-center m-4">Log in</button>

</form>
